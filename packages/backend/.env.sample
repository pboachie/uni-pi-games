# Sample environment configuration for uni-pi-games backend

# Session settings
SESSION_NAME=unipi-session
SESSION_SECRET=unipi-session-secret

# Redis configuration
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=unipi:

# PostgreSQL configuration
DATABASE_URL=postgres://uniPiAdmin:YourStrongPasswordHere@localhost:5432/unipi
PG_POOL_MAX=20
PG_IDLE_TIMEOUT_MILLIS=30000
PG_CONNECTION_TIMEOUT_MILLIS=5000

# General configuration
PORT=5000
NODE_ENV=development

# JWT configuration
JWT_PRIVATE_KEY="-----BEGIN EC PRIVATE KEY-----\nTokebGERE==\n-----END EC PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nTokenHere==\n-----END PUBLIC KEY-----"
JWT_ISSUER="uni-pi-games-platform"
JWT_AUDIENCE="uni-pi-users"
JWT_EXPIRES_IN="15m"


# Pi integration
PI_API_KEY=your-pi-api-key-goes-here
PI_WALLET_SEED=S_your_wallet_private_seed
PI_BASE_URL=https://api.minepi.com/v2